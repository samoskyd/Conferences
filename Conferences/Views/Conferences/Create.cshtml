@model Conferences.Conference

@{
    ViewData["Title"] = "Create";
}

<h1>Додати конференцію</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Aim" class="control-label"></label>
                <input asp-for="Aim" class="form-control" />
                <span asp-validation-for="Aim" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Topic" class="control-label"></label>
                <input asp-for="Topic" class="form-control" />
                <span asp-validation-for="Topic" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FormId" class="control-label"></label>
                <select asp-for="FormId" class="form-control" asp-items="ViewBag.FormId"></select>
                <span asp-validation-for="FormId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RequirementsForWorks" class="control-label"></label>
                <input asp-for="RequirementsForWorks" class="form-control" />
                <span asp-validation-for="RequirementsForWorks" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RequirementsForParticipants" class="control-label"></label>
                <input asp-for="RequirementsForParticipants" class="form-control" />
                <span asp-validation-for="RequirementsForParticipants" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateAndTime" class="control-label"></label>
                <input asp-for="DateAndTime" class="form-control" />
                <span asp-validation-for="DateAndTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrganizerId" class="control-label"></label>
                <select asp-for="OrganizerId" class="form-control" asp-items="ViewBag.OrganizerId"></select>
                <span asp-validation-for="OrganizerId" class="text-danger"></span>
            </div>
            
            <input type="hidden" value="@ViewBag.LocationId" name="LocationId" />

            <div class="form-group">
                <input type="submit" value="Створити" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Conferences" asp-action="Index" asp-route-id="@ViewBag.LocationId">Повернутись</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

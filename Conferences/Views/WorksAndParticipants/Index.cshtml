@model IEnumerable<Conferences.WorksAndParticipant>

@{
    ViewData["Title"] = "Index";
}

<h1>Роботи та учасники</h1>

<p>
    <a asp-action="Create">Створити запис</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Participant)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Work)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Participant.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Work.Title)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.WorkAndParticipantId">Редагувати</a> |
                <a asp-action="Details" asp-route-id="@item.WorkAndParticipantId">Деталі</a> |
                <a asp-action="Delete" asp-route-id="@item.WorkAndParticipantId">Видалити</a>
            </td>
        </tr>
}
    </tbody>
</table>

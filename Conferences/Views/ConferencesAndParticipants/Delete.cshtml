@model Conferences.ConferencesAndParticipant

@{
    ViewData["Title"] = "Delete";
}

<h1>Видалити запис</h1>

<h3>Ви впевнені що хочете видалити запис?</h3>
<div>
    <h4>Конференції та учасники</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Conference)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Conference.Aim)
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Participant)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Participant.FullName)
        </dd class>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ConferenceAndParticipantId" />
        <input type="submit" value="Видалити" class="btn btn-danger" /> |
        <a asp-action="Index">Повернутись</a>
    </form>
</div>

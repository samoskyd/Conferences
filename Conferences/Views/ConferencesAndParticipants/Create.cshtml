@model Conferences.ConferencesAndParticipant

@{
    ViewData["Title"] = "Create";
}

<h1>Створити</h1>

<h4>Конференції та учасники</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ParticipantId" class="control-label"></label>
                <select asp-for="ParticipantId" class ="form-control" asp-items="ViewBag.ParticipantId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ConferenceId" class="control-label"></label>
                <select asp-for="ConferenceId" class ="form-control" asp-items="ViewBag.ConferenceId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Створити" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Повернутись</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
